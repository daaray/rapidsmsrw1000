import re
from rapidsms.apps.base import AppBase
from rapidsmsrw1000.ubuzima.reports import pre

class ThousandCard(AppBase):
    # map of language code to language name
    LANG = { 'en': 'English',
             'fr': 'French',
             'rw': 'Kinyarwanda' }
    
    
    def handle(self, message):
        """Handles incoming messages."""
        results = self.keyword.match(self, message.text)

        print results,message.text
        if msg.text == 'dping':
            msg.respond('Didier pong')
            return True
        return False
